{
  "name": "weapp-typescript-stylus-starter",
  "version": "1.0.1",
  "scripts": {
    "bootstrap": "yarn && npm run build:npm",
    "start": "npm run build:ts:watch & npm run build:styl:watch && fg",
    "build": "npm run clean && npm run build:ts && npm run build:styl",
    "build:ts": "tsc",
    "build:ts:watch": "npm run build:ts -- -w",
    "build:styl": "stylus `find src -name '*.styl'`",
    "build:styl:watch": "npm run build:styl -- -w",
    "build:npm": "cd src && yarn && rm -rf miniprogram_npm && cd .. && /Applications/wechatwebdevtools.app/Contents/MacOS/cli --build-npm `pwd` && gulp fixnpm",
    "test": "jest",
    "clean": "rm -f `find src \\( -path 'src/node_modules' -o -path 'src/miniprogram_npm' \\) -prune -o \\( -name '*.js' -o -name '*.wxss' -o -name '*.js.map' \\) -print`"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "chalk": "^2.4.2",
    "dayjs": "^1.8.14",
    "gulp": "^4.0.2",
    "gulp-replace": "^1.0.0",
    "husky": "^2.5.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "stylus": "^0.54.5",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react-hooks": "^2.1.1",
    "typescript": "^3.5.2",
    "typescript-tslint-plugin": "^0.5.2"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix",
      "git add"
    ],
    "*.{json,js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
